<UserControl x:Class="ZuneSocialTagger.GUI.ViewsViewModels.WebAlbumList.SortControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <ResourceDictionary Source="../../Resources/Resources.xaml" />
    </UserControl.Resources>
    
    <Grid x:Name="RootVisual">
        <StackPanel Orientation="Horizontal">

            <TextBlock Text=" SORTED BY " FontWeight="Bold" 
                       FontSize="12" Foreground="Black" />

            <Button x:Name="btnSort" Click="btnSort_Click"
                    FontWeight="Bold" 
                    FontSize="12" Style="{StaticResource SmallGreyButtonNoBorder}" />
            
        </StackPanel>

    </Grid>
</UserControl>
